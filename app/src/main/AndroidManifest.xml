<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.charitygo">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainUI"
            android:theme="@style/AppThemeTranslucent.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.charitygo.MainUI" />
        </activity>
        <activity
            android:name=".MainUI"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/action_register"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.charitygo.LoginActivity" />
        </activity>

        <activity android:name=".PopUp"
            android:theme="@style/PopUpTheme"></activity>

        <activity android:name=".YoutubeActivity"
            android:theme="@style/Theme.Transparent.NoActionBar">
        </activity>

        <activity android:name=".PopUpCodeEnter"
            android:theme="@style/PopUpTheme"></activity>

        <activity
            android:name=".OrganizationActivity"
            android:label="@string/title_activity_organization"
            android:parentActivityName=".MainUI"
            android:theme="@style/AppThemeTranslucent.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.charitygo.MainUI" />
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_profile"
            android:parentActivityName=".MainUI"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.charitygo.MainUI" />
        </activity>
        <activity
            android:name=".DonateActivity"
            android:label="@string/title_activity_donate"
            android:parentActivityName=".OrganizationActivity"
            android:theme="@style/AppThemeLight.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.charitygo.OrganizationActivity" />
        </activity>
        <activity
            android:name=".OrganizationInfoActivity"
            android:label="@string/title_activity_organization_info"
            android:parentActivityName=".OrganizationActivity"
            android:theme="@style/AppThemeTranslucent.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.charitygo.OrganizationActivity" />
        </activity>
        <activity
            android:name=".Leaderboard"
            android:label="Leaderboard"
            android:parentActivityName=".MainUI">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.charitygo.MainUI" />
        </activity>
        <activity
            android:name=".SpnsorActivity"
            android:label="@string/sponsor_label"
            android:parentActivityName=".AboutActivity"
            android:theme="@style/AppThemeTranslucent.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.charitygo.AboutActivity" />
        </activity>
        <activity android:name=".SponsorInfoActivity"
            android:label="Sponsor's Information"
            android:parentActivityName=".SpnsorActivity"
            android:theme="@style/AppThemeTranslucent.NoActionBar"></activity>
    </application>

</manifest>